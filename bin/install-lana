#!/bin/sh

GLOBALNODEMODULES="$(npm root -g)"

# Add user
sudo useradd -m -s /bin/false -d /home/lanaci lanaci

# Give user non-sudo access to docker
sudo gpasswd -a lanaci docker
sudo service docker restart

# Create repos & logs directories
sudo -u lanaci mkdir /home/lanaci/repos
sudo -u lanaci mkdir /home/lanaci/logs
sudo -u lanaci mkdir /home/lanaci/local-images

# Add SSH Keys
sudo -u lanaci ssh-keygen -t rsa -C "lana@example.com"
sudo -u lanaci cat /home/lanaci/.ssh/id_rsa.pub
echo "Add the previous line to the list of SSH keys for your git host account."

# Download the lanaci app
sudo -u lanaci git clone 
